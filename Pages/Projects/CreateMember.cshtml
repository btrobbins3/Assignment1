@page
@model Assignment1.Pages.Projects.CreateMemberModel

@{
    ViewData["Title"] = "Member Sign Up";
}

<h1>Member Sign Up</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Member.Name" class="control-label"></label>
                <input asp-for="Member.Name" class="form-control" />
                <span asp-validation-for="Member.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.year" class="control-label"></label>
                <input asp-for="Member.year" class="form-control" />
                <span asp-validation-for="Member.year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.email" class="control-label"></label>
                <input asp-for="Member.email" class="form-control" />
                <span asp-validation-for="Member.email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.TeamId" class="control-label">Member Name</label>
                <select asp-for="Member.TeamId" class ="form-control" asp-items="ViewBag.TeamId">
                    <option value="">-- Select Member --</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign Up" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<h4></h4>


<div>
    <a asp-page="./Members">See our Members</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
