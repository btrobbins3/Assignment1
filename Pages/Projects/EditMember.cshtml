@page
@model Assignment1.Pages.Projects.EditMemberModel

@{
    ViewData["Title"] = "Edit Member";
}

<h1>Edit Member</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Member.MemberId" />
            <div class="form-group">
                <label asp-for="Member.Name" class="control-label"></label>
                <input asp-for="Member.Name" class="form-control" />
                <span asp-validation-for="Member.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.year" class="control-label"></label>
                <input asp-for="Member.year" class="form-control" />
                <span asp-validation-for="Member.year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.email" class="control-label"></label>
                <input asp-for="Member.email" class="form-control" />
                <span asp-validation-for="Member.email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.TeamId" class="control-label"></label>
                <select asp-for="Member.TeamId" class="form-control" asp-items="ViewBag.TeamId"></select>
                <span asp-validation-for="Member.TeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Members">Back to Members</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
